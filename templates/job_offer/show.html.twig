{% extends 'base.html.twig' %}

{% block title %}JobOffer{% endblock %}

{% block body %}
    <h1>JobOffer</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job_offer.id }}</td>
            </tr>
            <tr>
                <th>Reference</th>
                <td>{{ job_offer.reference }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job_offer.description }}</td>
            </tr>
            <tr>
                <th>Is_active</th>
                <td>{{ job_offer.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Notes</th>
                <td>{{ job_offer.notes }}</td>
            </tr>
            <tr>
                <th>Job_title</th>
                <td>{{ job_offer.jobTitle }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ job_offer.location }}</td>
            </tr>
            <tr>
                <th>Closing_date</th>
                <td>{{ job_offer.closingDate ? job_offer.closingDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>{{ job_offer.salary }}</td>
            </tr>
            <tr>
                <th>Created_date</th>
                <td>{{ job_offer.createdDate ? job_offer.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_job_offer_index') }}">back to list</a>

    <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}">edit</a>

    {{ include('job_offer/_delete_form.html.twig') }}
{% endblock %}
